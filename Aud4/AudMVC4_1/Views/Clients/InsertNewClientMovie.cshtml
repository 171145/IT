@model AudMVC3_1.Models.ClientMovie
@{
    ViewBag.Title = "InsertNewClientMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert new client for: @Model.movie.Name</h2>

@using (Html.BeginForm("InsertNewClientMovie", "Clients"))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.selectedClientId,
     new SelectList(Model.clients, "Id", "Name"), new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m =>m.movieId)
    <button type="submit" class="btn btn-default">Save</button>
}

